{
  "name": "viral-content-machine",
  "version": "0.1.0",
  "description": "AI-powered viral content generation platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:infra\" \"npm run dev:gateway\" \"npm run dev:orchestrator\" \"npm run dev:frontend\"",
    "dev:infra": "docker-compose -f docker-compose.dev.yml up",
    "dev:gateway": "cd apps/gateway && npm run start:dev",
    "dev:orchestrator": "cd apps/orchestrator && uvicorn main:app --reload --port 8000",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "build": "npm run build:sdk && npm run build:gateway && npm run build:frontend",
    "build:sdk": "cd packages/sdk && npm run build",
    "build:gateway": "cd apps/gateway && npm run build",
    "build:frontend": "cd apps/frontend && npm run build",
    "install:all": "npm install && cd apps/gateway && npm install && cd ../frontend && npm install && cd ../../packages/sdk && npm install",
    "lint": "npm run lint:sdk && npm run lint:gateway && npm run lint:frontend",
    "lint:sdk": "cd packages/sdk && npm run lint",
    "lint:gateway": "cd apps/gateway && npm run lint",
    "lint:frontend": "cd apps/frontend && npm run lint",
    "test": "npm run test:sdk && npm run test:gateway && npm run test:frontend",
    "test:sdk": "cd packages/sdk && npm run test",
    "test:gateway": "cd apps/gateway && npm run test",
    "test:frontend": "cd apps/frontend && npm run test",
    "clean": "npm run clean:sdk && npm run clean:gateway && npm run clean:frontend",
    "clean:sdk": "cd packages/sdk && npm run clean",
    "clean:gateway": "cd apps/gateway && rm -rf dist",
    "clean:frontend": "cd apps/frontend && rm -rf .next"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/viral-content-machine.git"
  },
  "keywords": [
    "ai",
    "content-generation",
    "viral-marketing",
    "social-media",
    "automation"
  ],
  "author": "VCM Team",
  "license": "MIT"
}
